
# Editing style directly in HTML:
# -----------------------------------------------------------------------------------------------------------
# Obs.: not useful for editing styles of multiples pages

<selector style="property:value">

<style>
    Selector {
        Property: value
    }
</style>



# Referencing CSS in HTML:
# -----------------------------------------------------------------------------------------------------------

<link rel="link" type="text/css" href="path">



# Editing style in CSS:
# -----------------------------------------------------------------------------------------------------------

# Basic
# --------------------------------

Selector {
	Property: value;
}


# Colors
# --------------------------------

Selector {
	color: rgba();
}


# Selectors
# --------------------------------

.class
#id
*
element
element, element
element element
element > element
element + element
:hover
:last-child
:first-child


# Text and fonts
# --------------------------------

Selector {
	font-family: value;
	font-style: value;
	font-size: value;
	font-weight: value;
	line-height: value;
}
